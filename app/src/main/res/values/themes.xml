<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OnlineJobz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<style name="Base.Theme.Workaholic" parent="Theme.Material3.DayNight.NoActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerItemBackground">@color/blue</item>
        <item name="drawerItemColorChecked">@color/white</item>
        <item name="drawerItemColorNormal">@color/dark</item>
        <item name="navHeaderTitleColor">@color/white</item>
        <item name="navHeaderDescriptionColor">@color/dark_blue</item>
        <item name="drawerBackground">@color/white</item>
        <item name="iconColor">@color/black</item>
        <item name="bottomNav">@color/light_gray</item>
        <item name="roundButtonBackground">@color/light_gray</item>
        <item name="cardBackground">@color/grey_version</item>
        <item name="dashBackground">@color/blue</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>

</resources>